<div class="about-container text-center p-4 p-md-5 rounded-3">
    <h1 class="display-5">{{title}}</h1>
    <p class="lead fst-italic mb-4">{{subtitle}}</p>
    
    <div class="row justify-content-center">
        <div class="col-md-9 col-lg-8">
            <p class="game-description">
                {{description}}
            </p>
            
            <hr class="my-4" style="color: var(--secondary-pink);">
            
            <h4 class="mb-3">how to play</h4>
            <ul class="list-group list-group-flush controls-list">
                {{#each controls}}
                <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                    <span>{{this.key}}</span>
                    <span class="badge rounded-pill">{{this.action}}</span>
                </li>
                {{/each}}
            </ul>
        </div>
    </div>
</div>